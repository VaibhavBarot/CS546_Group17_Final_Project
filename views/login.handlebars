<div class = "container">
<h1>Login</h1>
   <form id="signin-form" method="POST" action="/login">
   <div>
       <label for = "email">Email</label> 
       <input type="text" id="email" name = "email">

   </div>
   <div>
    <label for = 'password'>Password</label>
    <input type="password" id="password" name="password">
   </div>

   <div>
    <button type = "submit" name="submitButton" id="submitButton">Submit</button>
   </div>
   </form>
   <div id="error" class="alert alert-danger invisible" role="alert">
    {{#if error}}
    <p>{{msg}}</p>
    {{/if}}
   </div>
   <p><a href="/register">New User? Click here to register!</a></p>

   
   </div>