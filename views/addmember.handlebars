<div id="container" class="container">

    <p class="h1 text-center my-2 text-bg-dark form-border">Add Member</p>
    <form id="addmember-form" class="row form-border p-2 g-3 mt-2 justify-content-center" method="POST" action="addmember">

        <div class="row my-2 justify-content-center">
            <div class="col-md-6">
                <label for="member" class="form-label">Add Member</label>
                <select class="form-select" name="email">
                    {{#each members}}
                            <option value="{{email}}">{{firstName}} {{lastName}} | {{email}} | {{role}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-dark">Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>